<main>
    <div class='container my-5 pt-3'>
        <div class='row mb-2'>
            <div class='col-sm-12 col-md-3'>
                <a href='/status' class='btn btn-danger float-start '><i class="fa-solid fa-arrow-left me-1"></i></i>Trở
                    về</a>
            </div>
        </div>
        <div class='row justify-content-around'>
            <form class='p-5 col-sm-8 border' id="form-create" action="/status/create" method="post" >
                <div class='mb-3'>
                    <h3 class="text-uppercase text-center">Tạo trạng thái hợp đồng</h3>
                </div>
                <div class="row mb-3 ">                 
                    <div class="form-group">
                        <label for='name' class='form-label'>Name</label>
                        <span>*</span>
                        <input type='text' name="value" rules='require' class='form-control' id='value' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                    </div>
                </div>
                <button type='submit' class='btn btn-primary col-sm-12'>Submit</button>
            </form>
        </div>
    </div>
</main>
