<main>
    <div class='container my-5 pt-3'>
        <div class='row mb-2'>
            <div class='col-sm-12 col-md-3'>
                <a href='/combos' class='btn btn-danger float-start '><i class="fa-solid fa-arrow-left me-1"></i></i>Trở
                    về</a>
            </div>
        </div>
        <div class='row justify-content-around'>
            <form class='p-5 col-sm-8 border' id="form-create" action="/combos/create" method="post" >
                <div class='mb-3'>
                    <h3 class="text-uppercase text-center">Thêm dịch vụ</h3>
                </div>
                <div class="row mb-3 ">
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for='code' class='form-label'>Mã DV</label>
                        <span>*</span>
                        <input type='text' rules='require' name="code" class='form-control' id='code' aria-describedby='emailHelp' />
                        <span class="form-text text-danger" ></span>
                    </div>
                    <div class='col-sm-12 col-md-6 form-group '>
                        <label for='price' class='form-label'>Giá</label>
                        <span>*</span>
                        <input type='number' rules='require' name="price" class='form-control' id='price' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                        <label for='name' class='form-label'>Name</label>
                        <span>*</span>
                        <input type='text' name="name" rules='require' class='form-control' id='name' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Chi tiết</label>
                    <textarea class="form-control" name="detail" id="exampleFormControlTextarea1" rows="4"></textarea>
                </div>
            
                <button type='submit' class='btn btn-primary col-sm-12'>THÊM</button>
            </form>
        </div>
    </div>
</main>
<script src="/js/validator.js"></script>
<script src="/js/main.js"></script>
<script >
    validator('#form-create', '.form-group');
</script>