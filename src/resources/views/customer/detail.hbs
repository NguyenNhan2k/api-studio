<main>
    <div class='container my-5 pt-3'>
        <div class='row mb-2'>
            <div class='col-sm-12 col-md-3'>
                <a href='/customers' class='btn btn-danger float-start '><i class="fa-solid fa-arrow-left me-1"></i></i>Trở
                    về</a>
            </div>
        </div>
        <div class='row justify-content-around'>
            
            <form class='p-5 col-sm-8 border' id="form-create" action="/customers/update/{{customer.id}}?_method=PATCH" method="post"  >
                 <div class='mb-3'>
                    <h3 class="text-uppercase text-center">Chi tiết khách hàng</h3>
                </div>
           
                <div class="row mb-3 ">
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for='firstName' class='form-label'>First Name</label>
                        <span>*</span>
                        <input type='text' rules='require' name="firstName" value="{{customer.firstName}}" class='form-control' id='firstName' aria-describedby='emailHelp' />
                        <span class="form-text text-danger" ></span>
                    </div>
                      <div class="col-sm-12 col-md-6 form-group">
                        <label for='lastName' class='form-label'>Last Name</label>
                         <span>*</span>
                        <input type='text' value="{{customer.lastName}}" name="lastName" rules='require' class='form-control' id='lastName' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                    </div>
                </div>
                <div class='form-group mb-3'>
                    <label for='email' class='form-label'>Email</label>
                     <span>*</span>
                    <input type='email' value="{{customer.email}}" rules='require|isEmail' name="email" class='form-control' id='email' aria-describedby='emailHelp' />
                    <span class='form-text text-danger'></span>
                </div>
                <div class='form-group mb-3'>
                    <label for='phone' class='form-label'>Phone</label>
                     <span>*</span>
                    <input type='text' value="{{customer.phone}}" rules="require" name="phone" class='form-control' id='phone' />
                     <span class='form-text text-danger'></span>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Địa chỉ</label>
                    <textarea class="form-control" name="address" id="exampleFormControlTextarea1" rows="3">{{customer.address}}</textarea>
                </div>
                <div>
                    <button type='submit' class='btn btn-primary col-sm-12'>Cập nhật</button>
                </div>
              
            </form>
        </div>
    </div>
</main>
<script src="/js/validator.js"></script>
<script >
    validator('#form-create', '.form-group');
</script>