<!-- Modal -->
<div class='modal fade show modal-checkout' id='modal-checkout' tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true'>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h1 class='modal-title fs-5' id='exampleModalLabel'>Chi tiết Thanh toán</h1>
                <button type='button' class='btn-close btn-close-checkout' data-bs-dismiss='modal' aria-label='Close'></button>
            </div>
            <div class='modal-body'>
                <div class='mb-3 row'>
                    <label for='staticEmail' class='col-sm-3 col-form-label'>Mã Thanh toán</label>
                    <div class='col-sm-9'>
                        <input type='text' name='code' class='form-control w-75 form-input code-checkout' id='code-checkout' aria-describedby='emailHelp' />
                    </div>
                </div>
                <div class='mb-3 row'>
                    <label for='staticEmail' class='col-sm-3 col-form-label'>Phương thức</label>
                    <div class='col-sm-9 d-flex align-items-center'>
                        <div class='form-check'>
                            <input class='form-check-input type-checkout' value='Chuyển khoản' type='radio' name='type-checkout' id='flexRadioDefault1' />
                            <label class='form-check-label' for='flexRadioDefault1'>
                                Chuyển khoản
                            </label>
                        </div>
                        <div class='form-check ms-3'>
                            <input class='form-check-input type-checkout' value='Tiền mặt' type='radio' name='type-checkout' id='flexRadioDefault2' checked />
                            <label class='form-check-label' for='flexRadioDefault2'>
                                Tiền mặt
                            </label>
                        </div>
                    </div>
                </div>
                <div class='mb-3 row'>
                    <label for='staticEmail' class='col-sm-3 col-form-label'>Số tiền</label>
                    <div class='col-sm-9'>
                        <input type='number' name='price' class='form-control w-75 form-input price-checkout' id='price' aria-describedby='emailHelp' />
                    </div>
                </div>
                <div class='mb-3'>
                    <label for='exampleFormControlTextarea1' class='form-label'>Ghi chú</label>
                    <textarea class='form-control detail-checkout' name='detail' id='exampleFormControlTextarea1' rows='3'></textarea>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-secondary btn-update-checkout' data-bs-dismiss='modal'>Cập nhật</button>
                <button type='button' class='btn btn-primary btn-submit-checkout'>Thêm</button>
            </div>
        </div>
    </div>
</div>
<script src='/js/displayModalCheckout.js'></script>