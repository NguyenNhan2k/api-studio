<main>
    <div class='container my-5 pt-3'>
        <div class='row mb-2'>
            <div class='col-sm-12 col-md-3'>
                <a href='/users' class='btn btn-danger float-start '><i class="fa-solid fa-arrow-left me-1"></i></i>Trở
                    về</a>
            </div>
        </div>
        <div class='row justify-content-around'>
            
            <form class='p-5 col-sm-8 border' id="form-create" action="/users/update/{{user.id}}?_method=PATCH" method="post"  enctype="multipart/form-data">
                 <div class='mb-3'>
                    <h3 class="text-uppercase text-center">Chi tiết tài khoản</h3>
                </div>
                <div class="container mb-3">
                    <div class="picture-container">
                        <div class="picture">
                            <img src="/images/user/{{user.avatar}}" class="picture-src" id="wizardPicturePreview" title="">
                            <input type="file" id="wizard-picture" name="avatar">
                        </div>
                        <h6 class="">Choose Picture</h6>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for='firstName' class='form-label'>First Name</label>
                        <span>*</span>
                        <input type='text' rules='require' name="firstName" value="{{user.firstName}}" class='form-control' id='firstName' aria-describedby='emailHelp' />
                        <span class="form-text text-danger" ></span>
                    </div>
                      <div class="col-sm-12 col-md-6 form-group">
                        <label for='lastName' class='form-label'>Last Name</label>
                         <span>*</span>
                        <input type='text' value="{{user.lastName}}" name="lastName" rules='require' class='form-control' id='lastName' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                    </div>
                </div>
                <div class='form-group mb-3'>
                    <label for='email' class='form-label'>Email</label>
                     <span>*</span>
                    <input type='email' value="{{user.email}}" rules='require|isEmail' name="email" class='form-control' id='email' aria-describedby='emailHelp' />
                    <span class='form-text text-danger'></span>
                </div>
                <div class='form-group mb-3'>
                    <label for='phone' class='form-label'>Phone</label>
                     <span>*</span>
                    <input type='text' value="{{user.phone}}" rules="require" name="phone" class='form-control' id='phone' />
                     <span class='form-text text-danger'></span>
                </div>
                <div class='form-group mb-3'>
                    <label for='wage' class='form-label'>Lương cơ bản</label>
                     <span>*</span>
                    <input type='number' value="{{user.wage}}" rules="require" name="wage" class='form-control' id='wage' />
                     <span class='form-text text-danger'></span>
                </div>

                <div class='form-group mb-3 d-flex'>
                    <select class='form-select me-2' name="idRole" aria-label='Default select example'>
                        {{displaySelected roles user.role.value }}  
                    </select>
                    <select class='form-select' name="idPosition" aria-label='Default select example'>
                          {{displaySelected positions user.position.value }}  
                    </select>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Địa chỉ</label>
                    <textarea class="form-control" name="address" id="exampleFormControlTextarea1" rows="3">{{user.address}}</textarea>
                </div>
                    <button type='submit' class='btn btn-primary col-sm-12'>Submit</button>
                </div>
              
            </form>
        </div>
    </div>
</main>
<script src="/js/validator.js"></script>
<script >
    validator('#form-create', '.form-group');
</script>