<main>
    <div class='container my-5 pt-3'>
        <div class='row mb-2'>
            <div class='col-sm-12 col-md-3'>
                <a href='/accessories' class='btn btn-danger float-start '><i class="fa-solid fa-arrow-left me-1"></i></i>Trở
                    về</a>
            </div>
        </div>
        <div class='row justify-content-around'>
            <form class='p-5 col-sm-8 border' id="form-create" action="/accessories/update/{{accessory.id}}?_method=PATCH" method="post" >
                <div class='mb-3'>
                    <h3 class="text-uppercase text-center">Chi tiết phụ kiện</h3>
                </div>
                <div class="row mb-3 ">
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for='firstName' class='form-label'>Mã phụ kiện</label>
                        <span>*</span>
                        <input type='text' rules='require' value="{{accessory.code}}" name="code" class='form-control' id='code' aria-describedby='emailHelp' />
                        <span class="form-text text-danger" ></span>
                    </div>
                    <div class='col-sm-12 col-md-6 form-group '>
                        <label for='email' class='form-label'>Giá</label>
                        <span>*</span>
                        <input type='number' rules='require' value="{{accessory.price}}" name="price" class='form-control' id='email' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                        <label for='name' class='form-label'>Name</label>
                        <span>*</span>
                        <input type='text' name="name" rules='require' value="{{accessory.name}}" class='form-control' id='name' aria-describedby='emailHelp' />
                        <span class='form-text text-danger'></span>
                </div>
                <div class='form-group mb-3 d-flex'>
                    <select class='form-select' name="id_categories" aria-label='Default select example'>
                        {{displaySelected categories accessory.category.value}}
                    </select>
                </div>
                <button type='submit' class='btn btn-primary col-sm-12'>Submit</button>
            </form>
        </div>
    </div>
</main>
<script src="/js/validator.js"></script>
<script src="/js/main.js"></script>
<script >
    validator('#form-create', '.form-group');
</script>